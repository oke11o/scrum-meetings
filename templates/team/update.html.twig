{% extends 'base.html.twig' %}

{% block styles %}
    {{ parent() }}

    <link href="{{ asset('css/homepage.css') }}" rel="stylesheet"/>
{% endblock %}

{% block content %}
    {% if false %}
        <div class="container">
            <div class="alert alert-error">
                alert
            </div>
        </div>
    {% endif %}

    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h1 class="display-4">{{ 'Create team'|trans }}</h1>
    </div>
    <div class="container">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn-success btn">{{ 'Save'|trans }}</button>
        {{ form_end(form) }}
    </div>
{% endblock %}