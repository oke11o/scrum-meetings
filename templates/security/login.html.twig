{% extends 'base.html.twig' %}

{% block styles %}
    {{ parent() }}

    <link href="{{ asset('css/signin.css') }}" rel="stylesheet"/>
{% endblock %}

{% block title %}Login!{% endblock %}

{% block body_class %}text-center{% endblock %}

{% block body %}
    {#<form class="form-signin">#}
    {{ form_start(form, {attr:{class:'form-signin'}}) }}
        <a href="{{ path('homepage') }}">
            <img class="mb-4" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
        </a>
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <label for="{{ form._username.vars.id }}" class="sr-only">Email address</label>
        {{ form_widget(form._username, {attr:{class:'form-control', placeholder:'Email address', autofocus:true}}) }}

        <label for="{{ form._password.vars.id }}" class="sr-only">Password</label>
        {{ form_widget(form._password, {attr:{class:'form-control', placeholder:'Password'}}) }}

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>

        <div class="subbutton-line">
            <a href="{{ path('register') }}">Register</a>
        </div>

        <p class="mt-5 mb-3 text-muted">&copy; 2017-2018</p>
    {{ form_end(form) }}
{% endblock %}